                        "rst_FieldConfig": {"entity":"defTerms","filter_group":"relation","button_browse":true}
                    }
                },
                {
                    "dtID": "trm_InverseSymmetrical",
                    "dtFields":{
                        "dty_Role": "virtual",
                        "dty_Type": "boolean",
