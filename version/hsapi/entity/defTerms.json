                            "rst_FieldConfig":{"entity":"defTerms", "accept":".png,.jpg,.gif", "size":400},
                            "dty_Role":"virtual"
                        }
                    },
                    {
                        "dtID": "trm_ID",
                        "keyField": true,
                        "dtFields":{
                            "dty_Type":"integer",
                            "dty_Role":"primary",
