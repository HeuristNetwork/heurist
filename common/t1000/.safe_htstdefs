$MAINTABLES["BOOKMARKS_TO_KEYWORDS"] = 'keyword_links';
	$PKEY["BOOKMARKS_TO_KEYWORDS"] = 'kwl_id';
        $LINK_KEYS["BOOKMARKS_TO_KEYWORDS"] = array(	"BOOKMARK-ID" => "kwl_pers_id",
